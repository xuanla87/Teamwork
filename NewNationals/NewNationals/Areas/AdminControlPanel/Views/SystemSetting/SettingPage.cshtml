@model NewNationals.Areas.AdminControlPanel.Models.ModelSystems
@using System.Web.UI.WebControls
@using ClassLibrary.Services
@using ClassLibrary.Commons
@{
    ViewBag.Title = "Quản lý trang";
    Layout = "~/Areas/AdminControlPanel/Views/Shared/_LayoutAdminCp.cshtml";
}
<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        QUẢN LÝ TRANG 
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i>Home</a></li>
        <li class="active">Quản lý trang</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <!-- Main row -->
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title"></h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="row">
                            <div class="col-xs-12">
                                <div class="form-group">
                                    <label>@Html.LabelFor(model => model.THONGTIN)</label>
                                    @Html.TextAreaFor(model => model.THONGTIN, new { htmlAttributes = new { @class = "form-control", @placeholder = "Nhập nội dung thông tin" } })
                                    @Html.ValidationMessageFor(model => model.THONGTIN, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    <label>@Html.LabelFor(model => model.RIENGTU)</label>
                                    @Html.TextAreaFor(model => model.RIENGTU, new {htmlAttributes = new {@class = "form-control", @placeholder = "Nhập nội dung riêng tư"}})
                                    @Html.ValidationMessageFor(model => model.RIENGTU, "", new {@class = "text-danger"})
                                </div>
                                <div class="form-group">
                                    <label>@Html.LabelFor(model => model.DIEUKHOAN)</label>
                                    @Html.TextAreaFor(model => model.DIEUKHOAN, new { htmlAttributes = new { @class = "form-control", @placeholder = "Nhập nội dung điều khoản" } })
                                    @Html.ValidationMessageFor(model => model.DIEUKHOAN, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    <button class="btn bg-maroon">Lưu Thông Tin</button>
                                </div>
                            </div>
                        </div>
                    }
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
    </div>
    <!-- /.row (main row) -->
</section>
<script src="~/Areas/AdminControlPanel/Content/ckeditor/ckeditor.js"></script>
<script src="~/Areas/AdminControlPanel/Content/ckeditor/styles.js"></script>
<script src="~/Areas/AdminControlPanel/Content/ckfinder/ckfinder.js"></script>
<script>
    $(function () {
        CKEDITOR.replace('THONGTIN');
        CKEDITOR.replace('RIENGTU');
        CKEDITOR.replace('DIEUKHOAN');
    });
</script>


