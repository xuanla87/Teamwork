<body class="hold-transition skin-blue sidebar-mini">
    <div class="wrapper">
        <header class="main-header">
            <!-- Logo -->
            <a href="/AdminControlPanel/Default/Index" class="logo">
                <!-- mini logo for sidebar mini 50x50 pixels -->
                <span class="logo-mini"><b>A</b>LT</span>
                <!-- logo for regular state and mobile devices -->
                <span class="logo-lg"><b>Admin</b>CP</span>
            </a>
            <!-- Header Navbar: style can be found in header.less -->
            <nav class="navbar navbar-static-top">
                <!-- Sidebar toggle button-->
                <a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button">
                    <span class="sr-only">Toggle navigation</span>
                </a>
                <div class="navbar-custom-menu">
                    <ul class="nav navbar-nav">
                        
                        <!-- User Account: style can be found in dropdown.less -->
                        <li class="dropdown user user-menu">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                <img src="~/Areas/AdminControlPanel/Content/img/user2-160x160.jpg" class="user-image" alt="User Image">
                                <span class="hidden-xs">@Session["fullname"]</span>
                            </a>
                            <ul class="dropdown-menu">
                                <!-- User image -->
                                <li class="user-header">
                                    <img src="~/Areas/AdminControlPanel/Content/dist/img/user2-160x160.jpg" class="img-circle" alt="User Image">
                                    <p>
                                        @Session["fullname"]
                                        <small>@Session["email"]</small>
                                    </p>
                                </li>
                                <!-- Menu Body -->
                                <li class="user-body">
                                    <div class="row">
                                        <div class="col-xs-12 text-center">
                                            <a href="#" onclick="UserInfo()">Thông tin tài khoản</a>
                                        </div>
                                    </div>
                                    <!-- /.row -->
                                </li>
                                <!-- Menu Footer-->
                                <li class="user-footer">
                                    <div class="pull-left">
                                        <a href="#" onclick="ChangePass()" class="btn btn-default btn-flat">Đổi mật khẩu</a>
                                    </div>
                                    <div class="pull-right">
                                        <a href="#" onclick="Logout()" class="btn btn-default btn-flat">Đăng xuất</a>
                                    </div>
                                </li>
                            </ul>
                        </li>
                        <!-- Control Sidebar Toggle Button -->
                        <li>
                            <a href="#" data-toggle="control-sidebar"><i class="fa fa-gears"></i></a>
                        </li>
                    </ul>
                </div>
            </nav>
        </header>
        <!-- Left side column. contains the logo and sidebar -->
        <aside class="main-sidebar">
            <!-- sidebar: style can be found in sidebar.less -->
            <section class="sidebar">
                <!-- Sidebar user panel -->
                <div class="user-panel">
                    <div class="pull-left image">
                        <img src="~/Areas/AdminControlPanel/Content/img/user2-160x160.jpg" class="img-circle" alt="User Image">
                    </div>
                    <div class="pull-left info">
                        <p>@Session["fullname"]</p>
                        <a href="#"><i class="fa fa-circle text-success"></i> Online</a>
                    </div>
                </div>
                <!-- sidebar menu: : style can be found in sidebar.less -->
                <ul class="sidebar-menu">
                    <li class="header">MAIN NAVIGATION</li>
                    <li class="treeview" onclick="return SidebarClickEvent('s1', 'sidepar001');" id="s1">
                        <a href="#">
                            <i class="fa fa-files-o"></i> <span>QUẢN LÝ NỘI DUNG</span>
                            <span class="pull-right-container">
                                <i class="fa fa-angle-left pull-right"></i>
                            </span>
                        </a>
                        <ul class="treeview-menu">
                            <li onclick=" return SidebarClickEvent('1', 'sidesub001'); " id="1"><a href="/AdminControlPanel/Menu/Index"><i class="fa fa-circle-o"></i>Menu</a></li>
                            <li onclick=" return SidebarClickEvent('2', 'sidesub001'); " id="2"><a href="/AdminControlPanel/Categories/Index"><i class="fa fa-circle-o"></i>Chuyên mục</a></li>
                            <li onclick=" return SidebarClickEvent('3', 'sidesub001'); " id="3"><a href="/AdminControlPanel/Page/Index"><i class="fa fa-circle-o"></i>Bài viết</a></li>
                            <li onclick=" return SidebarClickEvent('4', 'sidesub001' ); " id="4"><a href="/AdminControlPanel/Page/PageIntro"><i class="fa fa-circle-o"></i>Quản lý trang</a></li>
                            @*<li onclick=" return SidebarClickEvent('4', 'sidesub001' ); " id="4"><a href="/AdminControlPanel/SlideShow/Index"><i class="fa fa-circle-o"></i>Slide tin tức</a></li>*@
                        </ul>
                    </li>
                    <li class="treeview" onclick="return SidebarClickEvent('s2', 'sidepar001');" id="s2">
                        <a href="#">
                            <i class="fa fa-files-o"></i>
                            <span>Quản Lý Website</span>
                            <span class="pull-right-container">
                                <span class="label label-primary pull-right"></span>
                            </span>
                        </a>
                        <ul class="treeview-menu">
                            <li onclick="return SidebarClickEvent('9','sidesub001');" id="9"><a href="/AdminControlPanel/Contact/Index"><i class="fa fa-circle-o"></i> Liên hệ</a></li>
                            <li onclick="return SidebarClickEvent('10', 'sidesub001'); " id="10"><a href="/AdminControlPanel/Comment/Index"><i class="fa fa-circle-o"></i> Bình luận</a></li>
                        </ul>
                    </li>
                    <li class="treeview" onclick="return SidebarClickEvent('s3', 'sidepar001');" id="s3">
                        <a href="#">
                            <i class="fa fa-laptop"></i>
                            <span>Hệ Thống</span>
                            <span class="pull-right-container">
                                <i class="fa fa-angle-left pull-right"></i>
                            </span>
                        </a>
                        <ul class="treeview-menu">
                            <li onclick=" return SidebarClickEvent('11', 'sidesub001'); " id="11"><a href="/AdminControlPanel/User/Index"><i class="fa fa-circle-o"></i>Người dùng</a></li>
                            <li onclick="return SidebarClickEvent('12', 'sidesub001'); " id="12"><a href="/AdminControlPanel/SystemSetting/Index"><i class="fa fa-circle-o"></i>Cài đặt</a></li>
                            @*<li onclick="return SidebarClickEvent('12','sidesub001');" id="12"><a href="/AdminControlPanel/Role/Index"><i class="fa fa-circle-o"></i>Quyền</a></li>*@
                            <li onclick="return SidebarClickEvent('13','sidesub001');" id="13"><a href="/AdminControlPanel/LogSystem/ListLogSystem"><i class="fa fa-circle-o"></i> Nhật ký</a></li>
                        </ul>
                    </li>
                </ul>
            </section>
            <!-- /.sidebar -->
        </aside>
        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            @RenderBody()
            <!-- /.content -->
        </div>
        <!-- /.content-wrapper -->
        <footer class="main-footer">
            @*<div class="pull-right hidden-xs">
                    <b>Version</b> 2.3.5
                </div>*@
            <strong>Copyright &copy; @DateTime.Now.Year </strong>
        </footer>
