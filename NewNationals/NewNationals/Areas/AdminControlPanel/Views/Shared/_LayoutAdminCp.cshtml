    <script src="~/Areas/AdminControlPanel/Content/plugins/datepicker/bootstrap-datepicker.js"></script>
    <!-- Bootstrap WYSIHTML5 -->
    <script src="~/Areas/AdminControlPanel/Content/plugins/bootstrap-wysihtml5/bootstrap3-wysihtml5.all.min.js"></script>
    <!-- Slimscroll -->
    <script src="~/Areas/AdminControlPanel/Content/plugins/slimScroll/jquery.slimscroll.min.js"></script>
