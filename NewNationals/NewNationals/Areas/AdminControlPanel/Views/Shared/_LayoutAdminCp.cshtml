    <script src="~/Areas/AdminControlPanel/Content/dist/js/demo.js"></script>
    <script src="~/Areas/AdminControlPanel/Content/bootstrap/js/common.js"></script>
    <script type="text/javascript">
        function Logout() {
            $.ajax({
                url: '@Url.Action("LogOut", "Login")',
                type: "POST",
                data: { Check: true },
                success: function (response) {
                    var url = "../Login/UserLogin";
                    window.location.assign(url);
                },
                error: function (response) {

                }
            });
        }
        function UserInfo() {
            var url = "@Url.Action("UserInfo", "Default")";
            window.location.assign(url);
        }
        function ChangePass() {
            var url = "@Url.Action("ChangePass", "Default")";
            window.location.assign(url);
        }
        $(function () {
            if (Cookies['sidepar001'] !== undefined) {
                var par = Cookies['sidepar001'];
                if (par !== '') {
                    $('.sidebar-menu>li').removeClass('active');
                    $('#' + par).attr('class', 'active');
                }
            }
            if (Cookies['sidesub001'] !== undefined) {
                var sub = Cookies['sidesub001'];
                if (sub !== undefined) {
                    $('.sidebar-menu>li>ul>li').removeClass('active');
                    $('#' + sub).attr('class', 'active');
                }
            }
        });
    </script>
</body>
