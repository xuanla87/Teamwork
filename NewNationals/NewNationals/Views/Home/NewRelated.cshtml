@model List<ClassLibrary.Models.Page>
@{
    if (Model.Count > 0)
    {
        <div class="new-related">
            <div class="title">Bài cùng mục tin:</div>
            <ul>
                @foreach (var item in Model)
                {
                    <li>
                        <a href="/@item.Url" title="@item.Name"><i class="fa fa-minus"></i> @item.Name.ToUpper()</a>
                    </li>
                }
            </ul>
        </div>
    }
}

