@model ClassLibrary.Models.Page
<div class="navbar navbar-inverse">
    <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
        </button>
        <a href="/" class="navbar-brand">
            <img src="~/Content/logo.png" />
        </a>
    </div>
    <div class="navbar-collapse collapse">
        @Html.Action("MenuTop")
        <div class="form-search">
            <div class="search-body">
                <input type="text" placeholder="Tìm kiêm" class="text"/>
                <button class="btn-search" type="button"><i class="glyphicon glyphicon-search"></i></button>
            </div>
        </div>
    </div>

</div>
<div class="container body-content">
    <div class="row">
        <div class="breadcrumb-trail breadcrumb">
            @Html.Raw(ViewBag.Breadcrumb)
        </div>
        <div class="col-lg-8">
            <div class="page-body">
                <h1 class="page-title">@Model.Name</h1>
                <div class="time-social">
                    <span class="time">
                        @DateTime.Parse(Model.ModifiedDate.ToString()).ToString("dd/MM/yyyy")
                    </span>
                    <span>
                        <a href="#" class="social-icon facebook">
                            <i class="fa fa-facebook"></i>
                        </a>
                        <a href="#" class="social-icon twitter">
                            <i class="fa fa-twitter"></i>
                        </a>
                        <a href="#" class="social-icon google">
                            <i class="fa fa-google-plus"></i>
                        </a>
                        <a href="#" class="social-icon linkedin">
                            <i class="fa fa-linkedin"></i>
                        </a>
                    </span>
                </div>
                <div class="page-content">
                    @Html.Raw(Model.Content)
                </div>
                @Html.Raw(ViewBag.ListFile)
            </div>
            <div class="comment">
                <div class="comment-item">

                </div>
                <hr />
                <div class="form-comment">
                    @Html.Action("Comment", new { PageId = Model.Id })
                </div>
            </div>
            @Html.Action("NewRelated", new { Id = Model.Id, CateId = Model.CategoriesId })
        </div>
        <div class="col-lg-4">
            <div class="box-right">
                <div class="header">
                    @ViewBag.CategoriesName
                </div>
                <div class="box-body">
                    @Html.Action("getBoxCategories", new { Id = ViewBag.CategoriesId })
                </div>
            </div>
        </div>
    </div>
</div>