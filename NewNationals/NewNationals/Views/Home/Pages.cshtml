@model ClassLibrary.Models.Page
<div class="navbar navbar-inverse">
    <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
        </button>
        <a href="/" class="navbar-brand">
            <img src="~/Content/logo.png" />
        </a>
    </div>
    <div class="navbar-collapse collapse">
        @Html.Action("MenuTop")
        <div class="form-search">
            <div class="search-body">
                <input type="text" placeholder="Tìm kiêm" class="text"/>
                <button class="btn-search" type="button"><i class="glyphicon glyphicon-search"></i></button>
            </div>
        </div>
    </div>

</div>
<div class="container body-content">
    <div class="row">
        <div class="breadcrumb-trail breadcrumb">
            @Html.Raw(ViewBag.Breadcrumb)
        </div>
        <div class="col-lg-8">
            <div class="page-body">
                <h1 class="page-title">@Model.Name</h1>
                <div class="page-content">
                    @Html.Raw(Model.Content)
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="box-right">
                <div class="header">
                    @ViewBag.CategoriesName
                </div>
                <div class="box-body">
                    @Html.Action("getBoxCategories", new { Id = ViewBag.CategoriesId })
                </div>
            </div>
            <div class="box-right">
                <div class="header">
                    Tin mới ra
                </div>
                @Html.Action("PageRelated", new { Id = Model.Id, CateId = Model.CategoriesId })
            </div>
        </div>
    </div>
</div>